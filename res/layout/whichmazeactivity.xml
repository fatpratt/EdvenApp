<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:padding="0dip"
    android:paddingTop="0dip"
    android:paddingBottom="0dip">

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mazenamelabel"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:text="Maze Name:"
            android:gravity="left"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/mazenameedit"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="15dip"
            android:scrollHorizontally="true"
            android:autoText="false"
            android:password="false"
            android:hint="this feature coming soon"
            android:gravity="fill_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mazeauthorlabel"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:text="Maze Author:"
            android:gravity="left"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/mazeauthoredit"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="15dip"
            android:scrollHorizontally="true"
            android:autoText="false"
            android:password="false"
            android:hint="this feature coming soon"
            android:gravity="fill_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mazeauthorlabel"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:text="Maze ID:"
            android:gravity="left"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/mazeidtext"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_marginLeft="41dip"
            android:layout_marginRight="15dip"
            android:scrollHorizontally="true"
            android:autoText="false"
            android:password="false"
            android:text="xtdubx3389"
            android:hint="this feature coming soon"
            android:gravity="fill_horizontal" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/LinearLayout01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:gravity="center"
            android:orientation="horizontal">

        <Button
            android:id="@+id/startbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:inputType="none"
            android:layout_marginLeft="5dip"
            android:text="Start EdVenture"
            android:height="15dip"/>

    </LinearLayout>

</LinearLayout>